        <Label Content="What view do you want?" HorizontalAlignment="Left" Margin="84,189,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="lakeView" Content="Lake view" HorizontalAlignment="Left" Margin="243,195,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="viewStreet" Content="View street" HorizontalAlignment="Left" Margin="338,195,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="numRoom" HorizontalAlignment="Left" Margin="231,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="numRoom_TextChanged"/>
